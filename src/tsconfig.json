{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es6",
            "dom"
        ],
        "declaration": true,
        "baseUrl": ".",
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true,
        "noEmitHelpers": true
    },
    "include": [
        "**/*.ts",
        "!*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "hooks"
    ],
    "compileOnSave": false,
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}